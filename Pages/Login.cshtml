@page
@model Heera.Pages.LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <style>
        /* Colors */
        @@keyframes waves {
            from {
                transform: rotate(0deg);
            }
            to {
                transform: rotate(360deg);
            }
        }

        :root {
            --primary-clr: rgba(1, 51, 57, 1);
            --font-asap: 'Asap', sans-serif;
            --wave1: rgba(69, 105, 144, 0.15);
            --wave2: rgba(2, 128, 144, 0.2);
        }

        body {
            font-family: var(--font-asap);
            margin: 0;
            padding: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .login {
            
            padding: 2.5rem 2rem 1.5rem 2rem;
            border-radius: 0.625rem;
            width: 100%;
            max-width: 35rem; /* Increased width */
            transition: transform 300ms, box-shadow 300ms;
            box-shadow: 0.3125rem 0.625rem 0.625rem rgba(2, 128, 144, 0.2);
            position: relative;
        }

        .login::before,
        .login::after {
            content: '';
            position: absolute;
            width: 60vw;
            height: 60vw;
            max-width: 37.5rem;
            max-height: 37.5rem;
            border-top-left-radius: 40%;
            border-top-right-radius: 45%;
            border-bottom-left-radius: 35%;
            border-bottom-right-radius: 40%;
            z-index: -1;
        }

        .login::before {
            left: 50%;
            bottom: -37.5%;
            background-color: var(--wave1);
            animation: waves 12s infinite linear;
        }

        .login::after {
            left: 35%;
            bottom: -36.5%;
            background-color: var(--wave2);
            animation: waves 12s infinite;
        }

        .login > input {
            font-family: var(--font-asap);
            display: block;
            border-radius: 0.3125rem;
            font-size: 1rem;
            background: white;
            width: 100%;
            border: 0;
            padding: 0.625rem;
            margin: 0.9375rem 0;
            box-sizing: border-box;
        }

        .login > button {
            font-family: var(--font-asap);
            cursor: pointer;
            color: #fff;
            font-size: 1rem;
            text-transform: uppercase;
            width: 100%;
            border: 0;
            padding: 0.625rem 0;
            margin-top: 0.625rem;
            border-radius: 0.3125rem;
            background-color: var(--primary-clr);
            transition: background-color 300ms;
        }

        .login > button:hover {
            background-color: #001e20; /* darkened var(--primary-clr) */
        }

        a {
            text-decoration: none;
            color: rgba(255, 255, 255, 0.6);
            position: absolute;
            right: 0.625rem;
            bottom: 0.625rem;
            font-size: 0.75rem;
        }

        /* Responsive Design */
        @@media (max-width: 768px) {
            .login {
                width: 90%;
                padding: 2rem 1.5rem 1.5rem 1.5rem;
            }

            .login::before,
            .login::after {
                width: 80vw;
                height: 80vw;
                max-width: 30rem;
                max-height: 30rem;
            }
        }

        @@media (max-width: 480px) {
            .login {
                width: 95%;
                padding: 1.5rem 1rem 1rem 1rem;
            }

            .login > input,
            .login > button {
                font-size: 0.875rem;
                padding: 0.5rem;
            }

            .login::before,
            .login::after {
                width: 100vw;
                height: 100vw;
                max-width: 25rem;
                max-height: 25rem;
            }
        }
    </style>
</head>
<body>
    <div class="main">
        <form class="login">
            <input type="text" placeholder="Username" >
            <input type="password" placeholder="Password">
            <button type="button" onclick="window.location.href='./Start'">Login</button>

        </form>
    </div>
</body>
</html>
